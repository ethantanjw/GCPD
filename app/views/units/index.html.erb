<h3>Active Units in GCPD</h3>
<table class="striped highlight">
  <thead>
    <th>Unit</th>
  </thead>
  <% if @active_units != nil %>
    <% for unit in @active_units %>
        <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
        <td><%= link_to unit.name, unit_path(unit) %></td>
        </tr>   
    <% end %>
  <% end %>
</table>

<p>&nbsp;</p>

<p><strong>
<%= link_to "New Unit", new_unit_path, class: 'waves-effect waves-light btn' %> 
</strong></p>

